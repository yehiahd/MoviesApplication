<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fci.yehiahd.moviesapplication.MovieDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#009c7d">

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chappie"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textSize="48sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:nestedScrollingEnabled="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/detail_image"
                        android:layout_width="300px"
                        android:layout_height="450px"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/interstellar"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="48dp">

                    <TextView
                        android:id="@+id/detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32dp"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#747474"
                        android:text="2015"/>

                    <TextView
                        android:id="@+id/detail_vote_average"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.1/10"
                        android:textColor="#000000"
                        android:layout_marginTop="12dp"/>

                    <Button
                        android:id="@+id/detail_mark_as_favorite"
                        android:layout_width="102dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="mark as favorite"
                        android:background="#00daaf"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:textColor="#747474"
                android:textSize="16sp"
                android:text="asdasdasd"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#747474"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Trailers:"
                    android:textColor="#747474"
                    android:onClick="goToTrailer"
                    android:textAppearance="?android:textAppearanceLarge"/>

                <ListView
                    android:id="@+id/detail_trailer_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"

                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                </ListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#747474"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:text="Reviews:"
                    android:textColor="#747474"
                    android:textAppearance="?android:textAppearanceLarge"/>

                <ListView
                    android:id="@+id/detail_reviews_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">
                </ListView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
